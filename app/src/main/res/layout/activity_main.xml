<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sf.demo1205a.MainActivity">

    <com.example.sf.demo1205a.LeafAnimView
        android:id="@+id/leafView"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leafView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="90dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leafView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/start_tv"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
